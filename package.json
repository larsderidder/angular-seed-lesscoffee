{
  "name": "angular-seed-lesscoffee",
  "private": true,
  "version": "0.0.0",
  "description": "A starter project for AngularJS with coffeescript and less",
  "repository": "https://github.com/todayispotato/angular-seed-lesscoffee",
  "license": "MIT",
  "devDependencies": {
    "karma": "~0.10",
    "coffee-script": "=1.9.0",
    "catw": "^0.2.0",
    "protractor": "^1.1.1",
    "http-server": "^0.6.1",
    "bower": "^1.3.1",
    "shelljs": "^0.2.6",
    "karma-junit-reporter": "^0.2.2"
  },
  "scripts": {
    "postinstall": "bower install",

    "prestart": "npm install",
    "start": "npm run watch & http-server -a localhost -p 8000 -c-1",

    "watch-coffee": "coffee --watch --compile --output app src/coffee",
    "watch-less": "catw -c 'lessc -' 'src/less/*.less' -o app/bundle.css -v",
    "watch": "npm run watch-coffee & npm run watch-less",

    "compile-coffee": "coffee --compile --output app src/coffee",
    "compile-less": "lessc src/less/*.less app/bundle.css",
    "compile": "npm run compile-coffee && npm run compile-less",

    "clean": "rm -rf app/vendor && rm -rf node_modules && find app -name '*.js' -o -name '*.css' -type f | xargs rm -f",

    "pretest": "npm install && npm run compile",
    "test": "karma start karma.conf.js",
    "pretest-single-run": "npm run pretest",
    "test-single-run": "karma start karma.conf.js  --single-run",

    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",

    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor e2e-tests/protractor.conf.js"
  }
}
